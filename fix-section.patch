+      trigger: section,
+      start: "top top",
+      end: () => `+=${scrollContainer.scrollHeight - window.innerHeight}`,
+      pin: true,
+      anticipatePin: 1,
+      onUpdate: (self) => {
+        // Update scroll position of the container based on scroll progress
+        const scrollAmount =
+          self.progress *
+          (scrollContainer.scrollHeight - scrollContainer.clientHeight);
+        scrollContainer.scrollTop = scrollAmount;
+      },
+      invalidateOnRefresh: true,
+    });
+
+    return () => {
+      pinTrigger.kill();
+    };
+  }, [list]);
+
